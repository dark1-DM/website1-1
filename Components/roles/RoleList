import React from 'react';
import { motion, AnimatePresence } from "framer-motion";
import RoleCard from "./RoleCard";

export default function RoleList({ roles, onEdit, onDelete, onUpdate }) {
  if (roles.length === 0) {
    return (
      <motion.div
        initial={{ opacity: 0 }}
        animate={{ opacity: 1 }}
        className="bg-[#2C2F33] rounded-xl p-12 border border-gray-800 text-center"
      >
        <div className="w-16 h-16 bg-gray-700 rounded-full flex items-center justify-center mx-auto mb-4">
          <span className="text-2xl">ðŸŽ­</span>
        </div>
        <h3 className="text-xl font-semibold text-white mb-2">No roles created yet</h3>
        <p className="text-gray-400">Create your first server role to get started with role management</p>
      </motion.div>
    );
  }

  return (
    <div className="space-y-4">
      <h2 className="text-2xl font-bold text-white mb-6">
        Server Roles ({roles.length})
      </h2>
      <AnimatePresence>
        {roles.map((role) => (
          <RoleCard
            key={role.id}
            role={role}
            onEdit={onEdit}
            onDelete={onDelete}
            onUpdate={onUpdate}
          />
        ))}
      </AnimatePresence>
    </div>
  );
}